    private void RefreshActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_RefreshActionPerformed
        
        
        
        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        
        
         
            int numViagens = listagemViagens.size();
            int currRowCount = jTable1.getRowCount();
            
            /*
            if(currRowCount < numViagens){
                int rowDif = numViagens - currRowCount;
                int totalRows = 
                jTable1.addr
                for(int i = rowDif)
            }
            else if(currRowCount > numViagens){
               
            }
            */
            int lineNumber = 0;
            for(int i = 0; i < listagemViagens.size(); i++){
                String[] infoViagem = new String[7];
                infoViagem[0] = listagemViagens.get(i).getAutocarro();
                infoViagem[1] = listagemViagens.get(i).getObjAutocarro().getTipoAutocarro();
                infoViagem[2] = listagemViagens.get(i).getOrigem();
                infoViagem[3] = listagemViagens.get(i).getDestino();
                infoViagem[4] = listagemViagens.get(i).getCidade(listagemViagens.get(i).getProxCidade(), listagemViagens.get(i).getSentido());
                //infoViagem[4] = listagemViagens.get(i).getEmViagem();
                infoViagem[5] = (listagemViagens.get(i).getEstadoAtual());
                infoViagem[6] = (listagemViagens.get(i).getTempoEstimado());
                
                
                    if(model.getRowCount()> 0){
                        for(int q = 0; q < model.getRowCount();q++ ){
                           
                           if(model.getValueAt(q, 0).equals(infoViagem[0])) {
                               model.removeRow(q);
                           }
                        }
                    }
                    model.addRow(new Object[]{infoViagem[0],infoViagem[1],infoViagem[2] ,
                                              infoViagem[3], infoViagem[4], infoViagem[5], infoViagem[6]});  
                    //jTable1.setValueAt(infoViagem[j], i, j);
                    
               // }
            }
            try {
                Thread.sleep(1000);
            }
            catch(InterruptedException iE){
                iE.printStackTrace();
            }
        
    }//GEN-LAST:event_RefreshActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        
        int indexSelecionado = jComboBox5.getSelectedIndex();
        
        if (indexSelecionado != 0) {
            indexSelecionado -= 1;
            
            if (listagemViagens.get(indexSelecionado).getParagemForcada() == true){
                listagemViagens.get(indexSelecionado).setParagemForcada(false);
                listagemViagens.get(indexSelecionado).setEmViagem(true);
                jButton4.setText("Parar Viagem");
                jButton6.setVisible(false);
                jComboBox5.setEnabled(true);
                jButton3.setEnabled(true);
            }
            else{
                listagemViagens.get(indexSelecionado).setParagemForcada(true);
                jButton4.setText("Resumir Viagem");
                listagemViagens.get(indexSelecionado).setEmViagem(false);
                jButton6.setVisible(true);
                jComboBox5.setEnabled(false);
                jButton3.setEnabled(false);
            }
            
        }
        
       
        
    }//GEN-LAST:event_jButton4ActionPerformed

