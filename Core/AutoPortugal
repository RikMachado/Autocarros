 class RemindTask extends TimerTask {
    public void run() {
    
        
        Refresh.doClick();
        
    
    }}
 
 class avariaRefresh extends TimerTask {
        public void run() {

            for (int i = 0; i < listagemViagens.size(); i++) {
                if (listagemViagens.get(i).getEmViagem() == true && listagemViagens.get(i).getAvaria() == false) {
                    if (avaria.getArray(i) == 1) {
                        listagemViagens.get(i).setAvaria(true);
                        listagemViagens.get(i).setEmViagem(false);
                    }

                }
            }

        }

    }
 
 
}

    

