    private void jTabbedPane1MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTabbedPane1MouseClicked
        jLabelESTNrBus.setText(Integer.toString(listagemAutocarros.size()));
        int conv=0, mini=0, expr=0, longd=0;
        String tipoBus;
        for (int i = 0; i < listagemAutocarros.size(); i++){
            
            tipoBus=listagemViagens.get(i).getObjAutocarro().getTipoAutocarro();
            switch (tipoBus){
                case "Convencional":conv +=1;
                    break;
                case "MiniBus":mini +=1;
                    break;
                case "Expresso":expr +=1;
                    break;
                case "LongDrive":longd +=1;
                    break;
            }
        }
        jLabelESTNrConv.setText(Integer.toString(conv));
        jLabelESTNrMini.setText(Integer.toString(mini));
        jLabelESTNrExpresso.setText(Integer.toString(expr));
        jLabelESTNrLong.setText(Integer.toString(longd));
        jLabelESTNrTotalAvarias.setText(Integer.toString(listagemViagens.get(0).getTotalAvaria()));
        jLabelESTPassagT.setText(Integer.toString(listagemViagens.get(0).getTotalPessoas()));
        int media = (51*2 + 21*2 + 59*2 + 69*2) /2;
        jLabelESTPassagEsp.setText(Integer.toString(media));
        int lucro = listagemViagens.get(0).getLucro();
        jLabelESTLucro.setText(Integer.toString(lucro));
        jLabelESTNrMotor.setText(Integer.toString(listagemMotoristas.get(0).getCountUsados()));
        
    }//GEN-LAST:event_jTabbedPane1MouseClicked

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton5ActionPerformed
        jPanel4.setVisible(false);
        
        int x = jCBMotorista.getItemCount()-1;
            for (int i=x; i>0; i--){
                jCBMotorista.removeItemAt(i);
            }
        jLabelP4MotoristaAtual.setText("--");
        jLabelP4MotoristaNovo.setText("--");
    }//GEN-LAST:event_jButton5ActionPerformed

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton6ActionPerformed
    
    int indexSelecionado = jComboBox5.getSelectedIndex();    
        
        if (indexSelecionado != 0) {
            indexSelecionado -= 1;
            jPanel4.setVisible(true);
            int indexCB5 = indexSelecionado;
            jLabelP4MotoristaAtual.setText(listagemViagens.get(indexSelecionado).getNomeMotorista());
           
            for (int i = 0; i < listagemMotoristas.size(); i++) {

                if (listagemMotoristas.get(i).getEstado() == false) {
                    jCBMotorista.addItem(listagemMotoristas.get(i).getNome());
                }

            }

        }
       
       
    }//GEN-LAST:event_jButton6ActionPerformed

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton7ActionPerformed
        
        if (jCBMotorista.getSelectedIndex()!=0) {
        
            for (int i=0; i<listagemMotoristas.size();i++){
                    
                if(listagemMotoristas.get(i).getNome() == jLabelP4MotoristaAtual.getText())
                    {   
                        listagemMotoristas.get(i).setEstado(false);}
                if(listagemMotoristas.get(i).getNome() == jLabelP4MotoristaNovo.getText())
                    {listagemMotoristas.get(i).setEstado(true);}
            }
            
            listagemViagens.get(jComboBox5.getSelectedIndex()-1).setNomeMotorista(jCBMotorista.getSelectedItem().toString());
            
            
            jPanel4.setVisible(false);
            int x = jCBMotorista.getItemCount()-1;
            
            for (int i=x; i>0; i--){
                
                jCBMotorista.removeItemAt(i);
            }
            jLabelP4MotoristaAtual.setText("--");
            jLabelP4MotoristaNovo.setText("--");
            
            jButton3.doClick();
        }
        
        
    }//GEN-LAST:event_jButton7ActionPerformed

    private void jCBMotoristaMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jCBMotoristaMouseClicked
        
        
    }//GEN-LAST:event_jCBMotoristaMouseClicked

    private void jCBMotoristaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jCBMotoristaActionPerformed
        if (jCBMotorista.getSelectedIndex()!=0){
            jLabelP4MotoristaNovo.setText(jCBMotorista.getSelectedItem().toString());
        }
    }//GEN-LAST:event_jCBMotoristaActionPerformed

