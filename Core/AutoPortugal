    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        
        int indexSelecionado = jComboBox5.getSelectedIndex();
        
        AutocarroCas.setVisible(false);
        AutocarroCasLis.setVisible(false);
        AutocarroLis.setVisible(false);
        AutocarroLisCoi.setVisible(false);
        AutocarroCoi.setVisible(false);
        AutocarroCoiPor.setVisible(false);
        AutocarroPor.setVisible(false);
        AutocarroPorBra.setVisible(false);
        AutocarroBra.setVisible(false);
        
        //jButtonPNG.doClick();
        
        if (indexSelecionado != 0) {
            MapZoomCasLis.setVisible(false);
            MapZoomPorBra.setVisible(false);
            indexSelecionado -= 1;
            
            int coordsAtuais = listagemViagens.get(indexSelecionado).getCoords();

            //int[] coords = listagemViagens.get(indexSelecionado).getPosicao();
            System.out.println(coordsAtuais);
            if (listagemViagens.get(indexSelecionado).getSentido() == false) {
                if (coordsAtuais <= 25) {
                    MapZoomCasLis.setVisible(true);
                    if (coordsAtuais <= 5)
                        AutocarroCas.setVisible(true);
                    else if (coordsAtuais >= 20)
                        AutocarroLis.setVisible(true);
                    else
                        AutocarroCasLis.setVisible(true);
                } else if (coordsAtuais >= 75) {
                    MapZoomPorBra.setVisible(true);
                    if (coordsAtuais <= 80)
                        AutocarroPor.setVisible(true);
                    else if (coordsAtuais >= 95)
                        AutocarroBra.setVisible(true);
                    else
                        AutocarroPorBra.setVisible(true);
                } else{
                if (coordsAtuais>25 && coordsAtuais<45)
                    AutocarroLisCoi.setVisible(true);
                else if (coordsAtuais>55 && coordsAtuais<75)
                    AutocarroCoiPor.setVisible(true);
                else
                    AutocarroCoi.setVisible(true);
            }} else {
                if (coordsAtuais <= 25) {
                    MapZoomPorBra.setVisible(true);
                    if (coordsAtuais <= 5)
                        AutocarroBra.setVisible(true);
                    else if (coordsAtuais >= 20)
                        AutocarroPor.setVisible(true);
                    else
                        AutocarroPorBra.setVisible(true);
                } else if (coordsAtuais >= 75) {
                    MapZoomCasLis.setVisible(true);
                    if (coordsAtuais <= 80)
                        AutocarroLis.setVisible(true);
                    else if (coordsAtuais >= 95)
                        AutocarroCas.setVisible(true);
                    else
                        AutocarroCasLis.setVisible(true);
                }else{
                if (coordsAtuais>25 && coordsAtuais<45)
                    AutocarroCoiPor.setVisible(true);
                else if (coordsAtuais>55 && coordsAtuais<75)
                    AutocarroLisCoi.setVisible(true);
                else
                    AutocarroCoi.setVisible(true);
            }}
            
            

            //Autocarro.setLocation(coords[0], coords[1]);
            

            
            
            
            
            
            
            
            
            String emViagem = listagemViagens.get(indexSelecionado).getEmViagem() ? "Em Viagem" : "Parado";
            String avariado = listagemViagens.get(indexSelecionado).getAvaria() ? "Avariado" : "Boas Condições";
            String sentido = listagemViagens.get(indexSelecionado).getEmViagem() ? "Norte - Sul" : "Sul - Norte";

            //jLabelNomeBus.setText("");
            jLabelEstado.setText(emViagem);
            jLabelSentido.setText(sentido);
            jLabelOrigem.setText(listagemViagens.get(indexSelecionado).getOrigem().toString());
            jLabelDestino.setText(listagemViagens.get(indexSelecionado).getDestino().toString());
            jLabelTempoEsperado.setText(listagemViagens.get(indexSelecionado).getTempoEstimado());
            jLabelNrPessoas.setText(Integer.toString(listagemViagens.get(indexSelecionado).getAtualPessoas()));
            jLabelNrTotalPess.setText(Integer.toString(listagemViagens.get(indexSelecionado).getTotalPessoas()));
            jLabelCondicao.setText(avariado);
            jLabelNomeMotorista.setText(listagemViagens.get(indexSelecionado).getNomeMotorista());
            jLabelNomeBus.setText("Autocarro\t ID: "+listagemViagens.get(indexSelecionado).getAutocarro()+"\t Tipo: "+listagemViagens.get(indexSelecionado).autocarro.getTipoAutocarro());
        
            
            
        
        }
    
    }//GEN-LAST:event_jButton3ActionPerformed

