public class GUI1_beta extends javax.swing.JFrame {
  
    
        Timer timer;
        Timer timerAvaria;
        int seconds = 10000;
        long delay = 2000;
        
        private ArrayList<Viagens> listagemViagens = new ArrayList<Viagens>();
        private ArrayList<Thread> listagemThreads = new ArrayList<Thread>();
        private ArrayList<Viaturas> listagemAutocarros = new ArrayList<Viaturas>();
        private ArrayList<Motorista> listagemMotoristas = new ArrayList<Motorista>();
        private boolean comboBoxMapaInit = false;
        Avaria avaria;
        Logger log = new Logger("GUI.java");
       
        
        
    public GUI1_beta() {
        Path currentRelativePath = Paths.get("");
        String s = currentRelativePath.toAbsolutePath().toString();
        log.print("Current relative path is: " + s, 5);
        log.print("Complete path for autocarros: " + s + "\\configs\\autocarros.csv", 5);
        log.print("A iniciar GUI e seus componentes.", 5);
        initComponents();
        Refresh.setVisible(false);

        log.print("A carregar lista de motoristas.", 5);
        //Load de motoristas
        List<String> tempListMotoristas = loadFile(s + "\\configs\\motoristas.csv");
        for (int i = 0; i < tempListMotoristas.size(); i++) {
            String[] params = tempListMotoristas.get(i).split(";");
            String nome = params[0];

            listagemMotoristas.add(new Motorista(nome, listagemMotoristas.size()));
        }
        
        log.print("A carregar lista de autocarros.", 5);
        //Load de autocarros
        List<String> tempListAutocarros = loadFile(s + "\\configs\\autocarros.csv");
        for (int i = 0; i < tempListAutocarros.size(); i++) {
            String[] params = tempListAutocarros.get(i).split(";");
            int persInt = Integer.parseInt(params[1].replace("\n", "").replace("\r", ""));
            switch (Integer.parseInt(params[0])) {
                case 0:
                    listagemAutocarros.add(new Viaturas(listagemAutocarros.size(), Integer.parseInt(params[1])));
                    break;

                case 1:
                    listagemAutocarros.add(new Convencional(listagemAutocarros.size(), persInt));
                    break;

                case 2:
                    listagemAutocarros.add(new MiniBus(listagemAutocarros.size(), persInt));
                    break;

                case 3:
                    listagemAutocarros.add(new Expresso(listagemAutocarros.size(), persInt));
                    break;

                case 4:
                    listagemAutocarros.add(new LongDrive(listagemAutocarros.size(), persInt));
                    break;

            }
        }

        log.print("A carregar lista de viagens.", 5);
        //Load de Viagens
        List<String> tempListViagens = loadFile(s + "\\configs\\viagens.csv");
        for (int i = 0; i < tempListViagens.size(); i++) {
            String[] params = tempListViagens.get(i).split(";");
            int id = Integer.parseInt(params[0].replace("\n", "").replace("\r", ""));
            int motID = Integer.parseInt(params[5].replace("\n", "").replace("\r", ""));
            boolean sentido;
            if (params[3].equals("true")) {
                sentido = true;
            } else {
                sentido = false;
            }

            listagemViagens.add(new Viagens(id, params[1], params[2], sentido, listagemViagens.size(), listagemAutocarros.get(Integer.parseInt(params[4])), listagemMotoristas.get(motID)));
        }
        
        log.print("A criar lista de threads a serem executadas.", 5);
        //Thread Creation
        for (int i = 0; i < listagemViagens.size(); i++) {
            listagemThreads.add(new Thread(listagemViagens.get(i)));
        }
        
        log.print("A criar thread de avarias.", 5);
        avaria = new Avaria(1000, 10, listagemViagens);
        Thread threadAvaria = new Thread(avaria);
        
        log.print("A carregar lista de viagens para combo box.", 5);
        if (comboBoxMapaInit == false) {
            for (int i = 0; i < listagemViagens.size(); i++) {

                int addItem = Integer.parseInt(listagemViagens.get(i).getAutocarro());
                jComboBox5.addItem(Integer.toString(addItem));

            }
            comboBoxMapaInit = true;
        }

        MapZoomCasLis.setVisible(false);
        MapZoomPorBra.setVisible(false);
        AutocarroCas.setVisible(false);
        jPanel4.setVisible(false);
        jButton6.setVisible(false);
        AutocarroCas.setVisible(false);
        AutocarroCasLis.setVisible(false);
        AutocarroLis.setVisible(false);
        AutocarroLisCoi.setVisible(false);
        AutocarroCoi.setVisible(false);
        AutocarroCoiPor.setVisible(false);
        AutocarroPor.setVisible(false);
        AutocarroPorBra.setVisible(false);
        AutocarroBra.setVisible(false);

        log.print("A começar threads.", 5);
        try {

            for (int i = 0; i < listagemThreads.size(); i++) {

                listagemThreads.get(i).start();
            }
            threadAvaria.start();

            Thread.sleep(1000);
        } catch (Exception e) {
            e.printStackTrace();
        }
        
        log.print("A criar e começar Timers para atualização de ecra e avarias.", 5);
        timer = new Timer();
        timer.schedule(new GUI1_beta.RemindTask(), seconds, delay);
        timerAvaria = new Timer();
        timerAvaria.schedule(new GUI1_beta.avariaRefresh(), seconds, delay);
        
        
        log.print("A carregar tabela de viagens.", 5);
        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        int numViagens = listagemViagens.size();
        int currRowCount = jTable1.getRowCount();
        int lineNumber = 0;

        for (int i = 0; i < listagemViagens.size(); i++) {
            String[] infoViagem = new String[7];
            infoViagem[0] = listagemViagens.get(i).getAutocarro();
            infoViagem[1] = listagemViagens.get(i).getObjAutocarro().getTipoAutocarro();
            infoViagem[2] = listagemViagens.get(i).getOrigem();
            infoViagem[3] = listagemViagens.get(i).getDestino();
            infoViagem[4] = listagemViagens.get(i).getCidade(listagemViagens.get(i).getProxCidade(), listagemViagens.get(i).getSentido());
            infoViagem[5] = (listagemViagens.get(i).getEstadoAtual());
            infoViagem[6] = (listagemViagens.get(i).getTempoEstimado());

            if (model.getRowCount() > 0) {
                for (int q = 0; q < model.getRowCount(); q++) {

                    if (model.getValueAt(q, 0).equals(infoViagem[0])) {
                        model.removeRow(q);
                    }
                }
            }
            model.addRow(new Object[]{infoViagem[0], infoViagem[1], infoViagem[2],
                infoViagem[3], infoViagem[4], infoViagem[5], infoViagem[6]});
        }
        try {
            Thread.sleep(1000);
        } catch (InterruptedException iE) {
            iE.printStackTrace();
        }

    }
    
    public List<String> loadFile(String filePath) {
        List<String> toLoad = new ArrayList<String>();

        //Load de cada entry para uma lista
        BufferedReader fis = null;
        try {
            int a = 0;
            int b = 0;
            File ficheiroInput = new File(filePath);
            fis = new BufferedReader(new FileReader(ficheiroInput));
            toLoad.add("");
            while (a != -1) {
                a = fis.read();
                if (a != -1) {
                    if (a == 10) {
                        b += 1;
                        toLoad.add("");
                    } else {
                        String temp = String.valueOf((char) a);
                        //toLoad.add(b,toLoad.get(b).concat(temp));
                        String temp2 = toLoad.get(b) + temp;

                        toLoad.set(b, temp2);
                    }
                }
            }
            fis.close();
            return toLoad;
        } catch (IOException e) {
            e.printStackTrace();
            return null;
        }

    }
    
    
    
